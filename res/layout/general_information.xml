<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >
    
    <TextView
        android:id="@+id/gener_info_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textlines"
        android:paddingBottom="5dp"
        android:paddingRight="30dp"
        android:text="General Information" />
    
    <TableLayout android:id="@+id/general_layout"
        android:layout_below="@id/gener_info_title"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" >
        
        <TableRow android:id="@+id/table_row1" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Genre: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/genre_text"
                android:text="the genre is..." />
"
            
        </TableRow>
        
        <TableRow android:id="@+id/table_row2" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Size: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/size_text"
                android:text="the size is..." />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row3" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Quality: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/quality_text"
                android:text="the quality is..." />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row4" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Resolution: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/reso_text"
                android:text="the resolution is..." />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row5" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Frame Rate: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/fr_text"
                android:text="the frame rate is..." />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row6" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Language: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/lang_text"
                android:text="the language is..." />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row7" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Subtitles: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/st_text"
                android:text="the subtitles is..." />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row8" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Run Time: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/rt_text"
                android:text="the run time is..." />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row9" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="IMDB Rating: "
                android:textStyle="bold" />
            
            <TextView android:id="@+id/rating_text"
                android:text="the rating is..." />

            
        </TableRow>
        
        
    </TableLayout>
    
    <TextView
        android:id="@+id/desc_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/general_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textlines"
        android:paddingBottom="5dp"
        android:paddingRight="30dp"
        android:text="Description" />
    
    <TextView 
        android:layout_below="@id/desc_title" 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
        android:padding="10dp"
        android:paddingLeft="15dp"
        android:id="@+id/desc" />

</RelativeLayout>
</ScrollView>
