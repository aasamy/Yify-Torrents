<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:paddingRight="10dp" >
    
    <TextView
        android:id="@+id/gener_info_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textlines"
        android:paddingBottom="5dp"
        android:paddingRight="30dp"
        android:text="Torrent Information" />
    
   <TableLayout
        android:id="@+id/general_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gener_info_title"
        android:fitsSystemWindows="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:showDividers="beginning"
        android:stretchColumns="1" >
        
        <TableRow android:id="@+id/table_row1" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Peers/Seeds: "
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/ps_text"
                android:paddingTop="10dp"
                android:fitsSystemWindows="true"
                android:text="the p/s is..." />
            
        </TableRow>
        
       
        
        <TableRow android:id="@+id/table_row4" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >
            
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Torrent Hash: "
                android:textStyle="bold" />

            
        </TableRow>
        
        <TableRow android:id="@+id/table_row5" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >
            
            
            <TextView android:id="@+id/hash_text"
                android:text="the hash is..."
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:layout_span="2" />

            
        </TableRow>
        
        </TableLayout>
        
    
    </RelativeLayout>
